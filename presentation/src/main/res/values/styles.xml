<resources>

    <style name="LightTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#FFFFFF</item>
        <item name="colorPrimaryDark">#989494</item>
        <item name="colorAccent">#000000</item>
        <item name="android:textColor">#000000</item>
        <item name="colorSecondary">#3D3D3D</item>
        <item name="android:colorBackground">#FFFFFF</item>
        <item name="floatingActionButtonStyle">@style/Widget.Design.Float</item>
        <item name="bottomNavigationStyle">@style/Widget.Design.BottomNavigation</item>
        <item name="navigationRailStyle">@style/Widget.Design.NavigationRail</item>
    </style>

    <!-- Base application theme. -->
    <style name="DarkTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/color_text_primary</item>
        <item name="colorSecondary">@color/gray</item>
        <item name="android:colorBackground">@color/color_background</item>
        <item name="floatingActionButtonStyle">@style/Widget.Design.Float</item>
        <item name="bottomNavigationStyle">@style/Widget.Design.BottomNavigation</item>
        <item name="navigationRailStyle">@style/Widget.Design.NavigationRail</item>
    </style>

    <style name="Widget.Design.Float" parent="Widget.Design.FloatingActionButton">
        <item name="android:backgroundTint">@color/dark_gray</item>
    </style>

    <style name="Widget.Design.BottomNavigation" parent="Widget.Design.BottomNavigationView">
        <item name="android:background">?android:colorBackground</item>
        <item name="itemIconTint">@color/bottom_navigation_color</item>
        <item name="itemTextColor">@color/bottom_navigation_color</item>
    </style>

    <style name="Widget.Design.NavigationRail" parent="Widget.MaterialComponents.NavigationRailView">
        <item name="android:background">?android:colorBackground</item>
        <item name="itemIconTint">@color/bottom_navigation_color</item>
        <item name="itemTextColor">@color/bottom_navigation_color</item>
    </style>

</resources>
